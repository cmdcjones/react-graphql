{
  "compilerOptions": {
      "target": "ESNext",
      "module": "nodenext",
      "lib": ["es2020"],
      "allowJs": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node", "jest"],
      "rootDirs": ["src"],
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
  },
  "ts-node": {
      "esm": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
